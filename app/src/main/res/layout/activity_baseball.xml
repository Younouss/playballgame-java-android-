<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BaseballActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id ="@+id/result"
        android:text = "Play Ball!" />
    <GridLayout
        android:id="@+id/ballShape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="4"
        android:layout_below = "@id/result">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balls" />

    </GridLayout>

    <GridLayout
        android:id="@+id/strikeShape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="4"
        android:layout_below = "@id/ballShape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/strikes" />
    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id = "@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below ="@id/strikeShape"
        android:rowCount="3"
        android:columnCount="4"
        tools:context=".GridXMLActivity">
        <Button
            android:id = "@+id/button0"
            android:text="0"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id = "@+id/button1"
            android:text="1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id = "@+id/button2"
            android:text="2"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id = "@+id/button3"
            android:text="3"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id = "@+id/button4"
            android:text="4"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id = "@+id/button5"
            android:text="5"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id = "@+id/button6"
            android:text="6"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id = "@+id/button7"
            android:text="7"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id = "@+id/button8"
            android:text="8"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id = "@+id/button9"
            android:text="9"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id = "@+id/buttonNew"
            android:text="New Game"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id = "@+id/buttonClear"
            android:text="Clear"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </GridLayout>

    <Button
        android:id = "@+id/buttonHint"
        android:text="Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons"/>

</RelativeLayout>
